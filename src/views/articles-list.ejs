<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../components/head', { title: 'Articles List' }); %>
  </head>
  <body>
    <% articles.forEach((article) => { %>
    <div class="card">
      <div class="card-body">
        <h3 class="card-title"><%= article.title %></h3>
        <p class="card-text"><%= article.text %></p>
      </div>
    </div>
    <% }); %>

    <!-- Scripts -->
    <%- include('../components/scripts'); %>
  </body>
</html>
