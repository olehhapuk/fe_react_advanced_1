<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../components/head', { title: 'Articles List' }); %>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col">
          <% articles.forEach((article, index) => { %>
          <div class="card mb-3">
            <div class="card-body">
              <h3 class="card-title"><%= article.title %></h3>
              <p class="card-text"><%= article.text %></p>
              <a href="/articles/<%= index %>" class="btn btn-primary">Read article</a>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </div>

    <!-- Scripts -->
    <%- include('../components/scripts'); %>
  </body>
</html>
